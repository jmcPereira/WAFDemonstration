@model List<VulnerableApp.Models.Message>

<div class="container mt-5">
    <!-- Title -->
    <h1 class="text-center mb-4"><i class="bi bi-shield-lock-fill"></i> Super Secure Message Board</h1>

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" action="/Message/PostMessage" class="card p-4 shadow">
                <div class="mb-3">
                    <label for="owner" class="form-label">Your Name</label>
                    <input type="text" name="owner" class="form-control" id="owner" placeholder="Enter your name" required />
                </div>
                <div class="mb-3">
                    <label for="content" class="form-label">Your Message</label>
                    <textarea name="content" class="form-control" id="content" rows="3" placeholder="Enter your message" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Post</button>
            </form>
        </div>
    </div>

    <!-- Delete All Messages Button -->
    <div class="row justify-content-center mt-3">
        <div class="col-md-8 text-center">
            <form method="post" action="/Message/DeleteAll">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete All Messages
                </button>
            </form>
        </div>
    </div>

    <!-- Messages Table -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="text-center mb-4">Messages</h2>
                    <ul class="list-group">
                        @foreach (var message in Model)
                        {
                            <li class="list-group-item mb-3">
                                <div class="d-flex justify-content-between align-items-center">
                                    <strong>@message.Owner</strong>
                                    <small class="text-muted">@message.Timestamp</small>
                                </div>

                                <div class="mt-2"><p>@Html.Raw(message.Content)</p></div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
